<h1>Board Show Page</h1>

<p><%= @board.name %></p>


<% @board.clues.each_with_index do |clue, i| %>
	<div class="clue-box">
		<%= clue.question %>

		<%= form_for [clue, @answer], :html => {:id => "new_answer_#{i}"}, remote: true do |f| %>
			<%= f.label :input, :for => "answer_input_#{i}" %>
			<%= f.text_field :input, :id => "answer_input_#{i}" %>
			<%= f.submit %>
			<div class="user-input"></div>
		<% end %>
	</div>
<% end %>
