<div class="row">

  <div class="large-8 columns">

  <h1>Play Now!</h1>
  <% @games.each do |game| %>
    <% if game.happenin? %>
      <div class="panel play">
        <h3><%= link_to game.title, game_path(game) %></h3>
        <p>Started On: <%= game.start_time.strftime("%d:%H:%M:%S") %></p>
        <p>Closes On: <%= game.end_time.to_formatted_s(:long_ordinal) %></p>
      </div>
    <% end %>
  <% end %>

  <h1>Wait For It...</h1>
  <% @games.each do |game| %>
    <% if game.not_started? %>
      <div class="row">
        <div class="large-8 columns">
          <div class="panel wait">
            <h3><%= game.title %></h3>
            <p>Countdown</p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

</div>



  <div class="large-4 columns">
  
  <h1>Finished</h1>
  <% @games.each do |game| %>
    <% if game.ended? %>
      <div class="panel finished">
        <h3><%= link_to game.title, game_path(game) %></h3>
        <p>Closed On: <%= game.end_time.to_formatted_s(:long_ordinal) %></p>
      </div>
    <% end %>
  <% end %>



</div>