<h1><%= @game.theme %></h1>

<% @game.boards.each do |board| %>
	<p><%= board.name %></p>
<% end %>

<h3> Join a Board </h3>
	<% if current_user %>
		<%=form_for [@game, @board] do |f| %>
			
			<div class= "field">
				<%= f.label :name %><br/>
				<%= f.text_field :name %>
			</div>

			<div class= "action">
			 	<%= f.submit %>
			 </div>
		
		<% end %>
	<% else %>
		<p>Please <%= link_to "log in", new_session_path %> to create a board.</p>
	<% end %>

